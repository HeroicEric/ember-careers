<div class="contain-to-grid">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1>{{link-to 'Ember Careers' 'index'}}</h1>
      </li>
    </ul>
    <section class="top-bar-section">
      <ul class="right">
        {{#link-to 'jobs.index' tagName='li'}}
          {{link-to 'Jobs' view.href}}
        {{/link-to}}
        {{#link-to 'jobs.new' tagName='li'}}
          {{link-to 'Post a Job' view.href}}
        {{/link-to}}
        <li>
          {{#if session.isAuthenticated}}
            <a {{ action 'invalidateSession' }}>Logout</a>
          {{else}}
            <a {{ action 'authenticateSession' }}>Login</a>
          {{/if}}
        </li>
      </ul>
    </section>
  </nav>
</div>

<div class="row">
  <div class="small-12 columns">
    {{outlet}}
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <footer id="footer">
      <div class="row">
        <div class="small-12 medium-6 columns">
          <span class="created-by small-only-text-center">
            Created by <a href="https://twitter.com/heroiceric">@HeroicEric</a>
          </span>
        </div>
        <div class="small-12 medium-6 columns">
          <div class="footer-links small-only-text-center medium-up-text-right">
            <a href="https://github.com/HeroicEric/ember-careers">
              <i class="fa fa-github fa-2"></i>
            </a>

            <a href="https://twitter.com/EmberCareers">
              <i class="fa fa-twitter fa-2"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
